    <script>
        function togglePanel() {
            var panel = document.getElementById("sidePanel");
            if (panel.style.width === "0px" || panel.style.width === "") {
                panel.style.width = "250px";
            } else {
                panel.style.width = "0";
            }
        }
    </script>
